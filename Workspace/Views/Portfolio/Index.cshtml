@model IEnumerable<WebApp.Models.PortfolioItemViewModel>

@{
    ViewData["Title"] = "Crypto Portfolio";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="text-center mb-4">
        <h3>My Crypto Portfolio</h3>
        <p><small>Track your cryptocurrency investments</small></p>
    </div>

    <!-- Success Message -->
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-light border alert-dismissible fade show" role="alert">
            <small>@ViewBag.SuccessMessage</small>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Portfolio Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Total Investment</h6>
                    <h5>@ViewBag.TotalInvestment.ToString("C")</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Current Value</h6>
                    <h5>@ViewBag.TotalCurrentValue.ToString("C")</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Profit/Loss</h6>
                    <h5>@ViewBag.TotalProfitLoss.ToString("C")</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Performance</h6>
                    <h5>@ViewBag.TotalProfitLossPercentage.ToString("P2")</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Coin Button -->
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-outline-dark btn-sm">
            Add New Coin
        </a>
    </div>

    <!-- Portfolio Table -->
    @if (Model.Any())
    {
        <div class="card card-blue-theme">
            <div class="card-header">
                <h6>Your Holdings</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><small>Coin</small></th>
                                <th><small>Symbol</small></th>
                                <th><small>Quantity</small></th>
                                <th><small>Buy Price</small></th>
                                <th><small>Current Price</small></th>
                                <th><small>Investment</small></th>
                                <th><small>Current Value</small></th>
                                <th><small>Profit/Loss</small></th>
                                <th><small>%</small></th>
                                <th><small>Date Purchased</small></th>
                                <th><small>Actions</small></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <small><strong>@item.AssetName</strong></small>
                                    </td>
                                    <td>
                                        <small>@item.AssetTicker</small>
                                    </td>
                                    <td><small>@item.Quantity.ToString("N8")</small></td>
                                    <td><small>@item.BuyPrice.ToString("C")</small></td>
                                    <td><small>@item.CurrentPrice.ToString("C")</small></td>
                                    <td><small>@item.TotalInvestment.ToString("C")</small></td>
                                    <td><small>@item.CurrentValue.ToString("C")</small></td>
                                    <td>
                                        <small><strong>@item.ProfitLoss.ToString("C")</strong></small>
                                    </td>
                                    <td>
                                        <small><strong>@item.ProfitLossPercentage.ToString("P2")</strong></small>
                                    </td>
                                    <td><small>@item.DatePurchased.ToString("MMM dd, yyyy")</small></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">
                                                âœŽ
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">
                                                ðŸ—‘
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <div class="card">
                <div class="card-body">
                    <h6>Your portfolio is empty</h6>
                    <p><small>Start by adding your first cryptocurrency holding!</small></p>
                    <a asp-action="Create" class="btn btn-outline-dark btn-sm">Add Your First Coin</a>
                </div>
            </div>
        </div>
    }
</div>
