@model WebApp.Models.PortfolioItemViewModel

@{
    ViewData["Title"] = "Delete " + Model.AssetName;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">üóëÔ∏è Delete @Model.AssetName</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">‚ö†Ô∏è Are you sure?</h5>
                        <p>You are about to permanently delete this cryptocurrency holding from your portfolio:</p>
                    </div>

                    <!-- Display coin details -->
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Asset:</strong> @Model.AssetName (@Model.AssetTicker)</p>
                                    <p><strong>Quantity:</strong> @Model.Quantity.ToString("N8")</p>
                                    <p><strong>Buy Price:</strong> @Model.BuyPrice.ToString("C")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Total Investment:</strong> @Model.TotalInvestment.ToString("C")</p>
                                    <p><strong>Date Purchased:</strong> @Model.DatePurchased.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-danger mt-3" role="alert">
                        <strong>This action cannot be undone!</strong> All data for this holding will be permanently removed.
                    </div>

                    <form action="/Portfolio/Delete/@Model.Id" method="post" class="d-inline">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                ‚Ü©Ô∏è Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this holding?')">
                                üóëÔ∏è Yes, Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
