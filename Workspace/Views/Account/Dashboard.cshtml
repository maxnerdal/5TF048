@{
    ViewData["Title"] = "Dashboard";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Welcome Header -->
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">ðŸ‘‹ Welcome, @User.Identity?.Name!</h2>
            </div>
            <div class="card-body">
                <p class="lead">Welcome to your personal cryptocurrency portfolio dashboard.</p>
                <p class="mb-0">Here you can manage your investments, track performance, and explore market data.</p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-wallet fa-3x text-success mb-3"></i>
                        <h5 class="card-title">My Portfolio</h5>
                        <p class="card-text">View and manage your cryptocurrency investments.</p>
                        <a asp-controller="Portfolio" asp-action="Index" class="btn btn-success">
                            <i class="fas fa-eye"></i> View Portfolio
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Market Data</h5>
                        <p class="card-text">Explore top cryptocurrency market trends.</p>
                        <a asp-controller="CryptoMarket" asp-action="Top100" class="btn btn-info">
                            <i class="fas fa-rocket"></i> View Top 100
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fab fa-bitcoin fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Bitcoin Price</h5>
                        <p class="card-text">Track Bitcoin price movements and trends.</p>
                        <a asp-controller="BtcPrice" asp-action="Index" class="btn btn-warning">
                            <i class="fas fa-chart-area"></i> View BTC Price
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Management -->
        <div class="card shadow mt-4">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0"><i class="fas fa-cog"></i> Account Settings</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Security</h6>
                        <p class="text-muted">Keep your account secure by updating your password regularly.</p>
                        <a asp-action="ChangePassword" class="btn btn-outline-primary me-2">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h6>Account Management</h6>
                        <p class="text-muted">Need to close your account? You can delete it permanently.</p>
                        <a asp-action="DeleteAccount" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Delete Account
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Info -->
        <div class="card shadow mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-user"></i> Account Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Username:</strong> @User.Identity?.Name</p>
                        <p><strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Account Status:</strong> <span class="badge bg-success">Active</span></p>
                        <p><strong>Member Since:</strong> @DateTime.Now.ToString("MMMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>