@{
    ViewData["Title"] = "Dashboard";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-light border alert-dismissible fade show" role="alert">
                <small>@TempData["SuccessMessage"]</small>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Welcome Header -->
        <div class="card border mb-4">
            <div class="card-body">
                <h3>Welcome, @User.Identity?.Name!</h3>
                <p><small>Welcome to your personal cryptocurrency portfolio dashboard.</small></p>
                <p class="mb-0"><small>Here you can manage your investments, track performance, and explore market data.</small></p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card border h-100">
                    <div class="card-body text-center">
                        <h6 class="card-title mt-3">My Portfolio</h6>
                        <p class="card-text"><small>View and manage your cryptocurrency investments.</small></p>
                        <a asp-controller="Portfolio" asp-action="Index" class="btn btn-outline-dark btn-sm">
                            View Portfolio
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card border h-100">
                    <div class="card-body text-center">
                        <h6 class="card-title mt-3">Market Data</h6>
                        <p class="card-text"><small>Explore top cryptocurrency market trends.</small></p>
                        <a asp-controller="CryptoMarket" asp-action="Top100" class="btn btn-outline-dark btn-sm">
                            View Top 100
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card border h-100">
                    <div class="card-body text-center">
                        <h6 class="card-title mt-3">Bitcoin Price</h6>
                        <p class="card-text"><small>Track Bitcoin price movements and trends.</small></p>
                        <a asp-controller="BtcPrice" asp-action="Index" class="btn btn-outline-dark btn-sm">
                            View BTC Price
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Management -->
        <div class="card border mt-4">
            <div class="card-body">
                <h6>Account Settings</h6>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <h6><small>Security</small></h6>
                        <p class="text-muted"><small>Keep your account secure by updating your password regularly.</small></p>
                        <a asp-action="ChangePassword" class="btn btn-outline-dark btn-sm me-2">
                            Change Password
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h6><small>Account Management</small></h6>
                        <p class="text-muted"><small>Need to close your account? You can delete it permanently.</small></p>
                        <a asp-action="DeleteAccount" class="btn btn-outline-dark btn-sm">
                            Delete Account
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Info -->
        <div class="card border mt-4">
            <div class="card-body">
                <h6>Account Information</h6>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><small><strong>Username:</strong> @User.Identity?.Name</small></p>
                        <p><small><strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</small></p>
                    </div>
                    <div class="col-md-6">
                        <p><small><strong>Account Status:</strong> Active</small></p>
                        <p><small><strong>Member Since:</strong> @DateTime.Now.ToString("MMMM yyyy")</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>