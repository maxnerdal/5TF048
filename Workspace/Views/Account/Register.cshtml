@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card border">
            <div class="card-body">
                <h3 class="text-center mb-4">Create Account</h3>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-light border">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li><small>@error.ErrorMessage</small></li>
                            }
                        </ul>
                    </div>
                }

                <form asp-action="Register" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"><small>Username</small></label>
                        <input asp-for="Username" class="form-control form-control-sm" placeholder="Choose a username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <div class="form-text"><small>3-50 characters, letters and numbers only</small></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><small>Email</small></label>
                        <input asp-for="Email" class="form-control form-control-sm" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"><small>Password</small></label>
                        <input asp-for="Password" class="form-control form-control-sm" placeholder="Choose a password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text"><small>Minimum 6 characters</small></div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"><small>Confirm Password</small></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-sm" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-outline-dark">
                            Create Account
                        </button>
                    </div>
                </form>

                <hr>
                
                <div class="text-center">
                    <p><small>Already have an account?</small></p>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-dark btn-sm">
                        Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
