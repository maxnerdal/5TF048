@model WebApp.Models.BtcPriceModel

@{
    ViewData["Title"] = ViewBag.PageTitle ?? "Bitcoin Price";
}

<!-- Header using ViewBag -->
<div class="text-center mb-4">
    <h3>@ViewBag.PageTitle</h3>
    <p><small>@ViewBag.MarketStatus</small></p>
</div>

<div class="container">
    <!-- Alert Message from ViewBag -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="alert alert-light border text-center" role="alert">
                <small>@ViewBag.AlertMessage</small>
            </div>
        </div>
    </div>

    <!-- Main BTC Price Card (Model + ViewBag styling) -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-blue-theme">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        Bitcoin (BTC)
                    </h6>
                </div>
                <div class="card-body text-center">
                    <!-- Model data -->
                    <h2>
                        $@Model.Price.ToString("N2")
                    </h2>
                    <p class="text-muted"><small>@Model.Currency</small></p>
                    
                    <!-- ViewBag for dynamic styling -->
                    @if (Model.ChangePercent24h != 0)
                    {
                        <p class="@ViewBag.PriceColor">
                            <small>@Model.ChangePercent24h.ToString("N2")% (24h)</small>
                        </p>
                    }
                    
                    <!-- Model data -->
                    <small class="text-muted">
                        Last updated: @Model.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss") UTC
                    </small>
                </div>
                <div class="card-footer">
                    <button id="refreshBtn" class="btn btn-outline-dark btn-sm btn-block">
                        Refresh Price
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Info Cards using ViewBag -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card card-blue-theme">
                <div class="card-header">
                    <h6>Next Update</h6>
                </div>
                <div class="card-body">
                    <p><small>Next automatic update: <strong>@ViewBag.NextUpdateTime</strong></small></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card card-blue-theme">
                <div class="card-header">
                    <h6>Trading Tip</h6>
                </div>
                <div class="card-body">
                    <p><small>@ViewBag.TradingTip</small></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('refreshBtn').addEventListener('click', async function() {
            const btn = this;
            btn.disabled = true;
            btn.innerHTML = 'ðŸ”„ Loading...';
            
            try {
                const response = await fetch('/BtcPrice/GetPrice');
                const data = await response.json();
                
                // Update the price display
                location.reload(); // Simple reload for now
            } catch (error) {
                console.error('Error fetching price:', error);
                alert('Failed to fetch price. Please try again.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = 'ðŸ”„ Refresh Price';
            }
        });
        
        // Auto-refresh every 30 seconds
        setInterval(function() {
            document.getElementById('refreshBtn').click();
        }, 30000);
    </script>
}
