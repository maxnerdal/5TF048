@{
    ViewData["Title"] = "Crypto Portfolio Tracker";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row py-5 mb-5">
        <div class="col-12 text-center">
            <h3 class="fw-bold">Crypto Portfolio Tracker</h3>
            <p><small>Your complete solution for cryptocurrency portfolio management</small></p>
            <p><small>Track, analyze, and manage your crypto investments with real-time data</small></p>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h6 class="text-center mb-4">Key Features</h6>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h6 class="card-title">Live Bitcoin Prices</h6>
                    <p class="card-text"><small>Get real-time Bitcoin price data from CoinGecko API with automatic updates and price tracking.</small></p>
                    <a href="/BtcPrice" class="btn btn-outline-dark btn-sm">View Prices</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h6 class="card-title">Portfolio Management</h6>
                    <p class="card-text"><small>Add, edit, and track your cryptocurrency holdings with automatic profit/loss calculations and performance metrics.</small></p>
                    <a href="/Portfolio" class="btn btn-outline-dark btn-sm">Manage Portfolio</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h6 class="card-title">Smart Analytics</h6>
                    <p class="card-text"><small>View detailed analytics including total investment, current value, profit/loss percentages, and performance insights.</small></p>
                    <a href="/Portfolio" class="btn btn-outline-dark btn-sm">View Analytics</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Stack Section -->
    <div class="row py-5 mb-5" style="background-color: #f8f9fa;">
        <div class="col-12">
            <h6 class="text-center mb-4">Built With Modern Technology</h6>
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="row text-center">
                <div class="col-6 col-md-3 mb-3">
                    <div class="p-3">
                        <div class="border rounded p-2 mb-2">
                            <strong><small>ASP.NET</small></strong>
                        </div>
                        <small>Core MVC</small>
                    </div>
                </div>
                <div class="col-6 col-md-3 mb-3">
                    <div class="p-3">
                        <div class="border rounded p-2 mb-2">
                            <strong><small>C#</small></strong>
                        </div>
                        <small>.NET 9.0</small>
                    </div>
                </div>
                <div class="col-6 col-md-3 mb-3">
                    <div class="p-3">
                        <div class="border rounded p-2 mb-2">
                            <strong><small>Bootstrap</small></strong>
                        </div>
                        <small>Responsive UI</small>
                    </div>
                </div>
                <div class="col-6 col-md-3 mb-3">
                    <div class="p-3">
                        <div class="border rounded p-2 mb-2">
                            <strong><small>API</small></strong>
                        </div>
                        <small>CoinGecko</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h6 class="text-center mb-4">Application Features</h6>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="border rounded p-4">
                <h6 class="fw-bold">Real-time</h6>
                <p class="mb-0"><small>Price Updates</small></p>
            </div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="border rounded p-4">
                <h6 class="fw-bold">CRUD</h6>
                <p class="mb-0"><small>Operations</small></p>
            </div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="border rounded p-4">
                <h6 class="fw-bold">Auto-save</h6>
                <p class="mb-0"><small>Draft Forms</small></p>
            </div>
        </div>
        <div class="col-md-3 text-center mb-3">
            <div class="border rounded p-4">
                <h6 class="fw-bold">Session</h6>
                <p class="mb-0"><small>Management</small></p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row py-5" style="background-color: #212529; color: white;">
        <div class="col-12 text-center">
            <h6 class="mb-4">Start Managing Your Crypto Portfolio Today!</h6>
            <p class="mb-4"><small>Take control of your cryptocurrency investments with our comprehensive tracking and analysis tools.</small></p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="/Portfolio/Create" class="btn btn-outline-light btn-sm">
                    Add Your First Coin
                </a>
                <a href="/Portfolio" class="btn btn-outline-light btn-sm">
                    View Portfolio
                </a>
                <a href="/BtcPrice" class="btn btn-outline-light btn-sm">
                    Check BTC Price
                </a>
            </div>
        </div>
    </div>
</div>
