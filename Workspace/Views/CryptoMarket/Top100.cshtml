@model List<CryptoMarketModel>

@{
    ViewData["Title"] = "Top 100 Cryptocurrencies";
    var currentSort = ViewBag.CurrentSort as string ?? "marketcap";
    var currentCategory = ViewBag.CurrentCategory as string ?? "";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
    var allCategories = ViewBag.AllCategories as List<string> ?? new List<string>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Demo Data Warning -->
            <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>
                    <strong>Demo Data Notice:</strong> This page displays simulated cryptocurrency market data for demonstration purposes. 
                    Real-time data requires CoinGecko API authentication.
                </div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>üöÄ Top Cryptocurrencies</h2>
                <div class="text-muted">
                    <small>Last updated: @DateTime.Now.ToString("HH:mm:ss")</small>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <!-- Search Box -->
            <div class="row mb-4">
                <div class="col-12">
                    <form method="get" class="d-flex gap-2 mb-3">
                        <input type="hidden" name="sortBy" value="@currentSort" />
                        <input type="hidden" name="category" value="@currentCategory" />
                        <div class="flex-grow-1">
                            <input type="text" name="search" class="form-control" 
                                   placeholder="S√∂k efter kryptovaluta (namn, symbol eller ID)..." 
                                   value="@currentSearch" />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> S√∂k
                        </button>
                        @if (!string.IsNullOrEmpty(currentSearch))
                        {
                            <a href="@Url.Action("Top100", new { sortBy = currentSort, category = currentCategory })" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Rensa
                            </a>
                        }
                    </form>
                </div>
            </div>

            <!-- Category Filters -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <a href="@Url.Action("Top100", new { sortBy = currentSort, category = "", search = currentSearch })" 
                           class="btn @(string.IsNullOrEmpty(currentCategory) ? "btn-primary" : "btn-outline-primary") btn-sm">
                            All
                        </a>
                        @foreach (var category in allCategories)
                        {
                            <a href="@Url.Action("Top100", new { sortBy = currentSort, category = category, search = currentSearch })" 
                               class="btn @(currentCategory.Equals(category, StringComparison.OrdinalIgnoreCase) ? "btn-primary" : "btn-outline-primary") btn-sm">
                                @category
                            </a>
                        }
                    </div>
                </div>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <h4>No Data Available</h4>
                    <p>
                        @if (!string.IsNullOrEmpty(currentSearch) && !string.IsNullOrEmpty(currentCategory))
                        {
                            <text>Inga kryptovalutor hittades f√∂r s√∂kningen "@currentSearch" i kategorin "@currentCategory".</text>
                        }
                        else if (!string.IsNullOrEmpty(currentSearch))
                        {
                            <text>Inga kryptovalutor hittades f√∂r s√∂kningen "@currentSearch".</text>
                        }
                        else if (!string.IsNullOrEmpty(currentCategory))
                        {
                            <text>No cryptocurrencies found in the "@currentCategory" category.</text>
                        }
                        else
                        {
                            <text>Unable to load cryptocurrency data at this time. Please try refreshing the page.</text>
                        }
                    </p>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">
                                            <a href="@Url.Action("Top100", new { sortBy = "price", category = currentCategory, search = currentSearch })" 
                                               class="text-decoration-none text-white">
                                                Price @if (currentSort == "price") { <i class="fas fa-sort-down"></i> }
                                            </a>
                                        </th>
                                        <th scope="col">
                                            <a href="@Url.Action("Top100", new { sortBy = "change", category = currentCategory, search = currentSearch })" 
                                               class="text-decoration-none text-white">
                                                24h Change @if (currentSort == "change") { <i class="fas fa-sort-down"></i> }
                                            </a>
                                        </th>
                                        <th scope="col">
                                            <a href="@Url.Action("Top100", new { sortBy = "marketcap", category = currentCategory, search = currentSearch })" 
                                               class="text-decoration-none text-white">
                                                Market Cap @if (currentSort == "marketcap") { <i class="fas fa-sort-down"></i> }
                                            </a>
                                        </th>
                                        <th scope="col">
                                            <a href="@Url.Action("Top100", new { sortBy = "volume", category = currentCategory, search = currentSearch })" 
                                               class="text-decoration-none text-white">
                                                Volume (24h) @if (currentSort == "volume") { <i class="fas fa-sort-down"></i> }
                                            </a>
                                        </th>
                                        <th scope="col">Categories</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var crypto = Model[i];
                                        <tr>
                                            <td class="fw-bold text-muted">@(i + 1)</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@crypto.Image" alt="@crypto.Name" class="me-2" style="width: 24px; height: 24px;">
                                                    <div>
                                                        <div class="fw-bold">@crypto.Name</div>
                                                        <small class="text-muted text-uppercase">@crypto.Symbol</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="fw-bold">$@crypto.CurrentPrice.ToString("N2")</td>
                                            <td class="@crypto.ChangeColorClass fw-bold">
                                                @crypto.ChangeIcon @crypto.PriceChangePercentage24h.ToString("N2")%
                                            </td>
                                            <td>@crypto.FormattedMarketCap</td>
                                            <td class="text-muted">@crypto.FormattedVolume</td>
                                            <td>
                                                @foreach (var category in crypto.Categories)
                                                {
                                                    <span class="badge bg-secondary me-1 mb-1">@category</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-muted small">
                                <i class="fas fa-info-circle"></i>
                                Showing @Model.Count cryptocurrency@(Model.Count != 1 ? "s" : "") 
                                @if (!string.IsNullOrEmpty(currentSearch)) { <text>matching "@currentSearch" </text> }
                                @if (!string.IsNullOrEmpty(currentCategory)) { <text>in "@currentCategory" category </text> }
                                sorted by @currentSort.
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <small class="text-muted">
                                Demo data ‚Ä¢ <a href="#" onclick="location.reload()" class="text-decoration-none">üîÑ Refresh Data</a>
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
    
    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
    }
    
    .alert-warning {
        border-left: 4px solid #ffc107;
    }
    
    .btn-sm {
        font-size: 0.8rem;
        padding: 0.25rem 0.75rem;
    }
    
    .badge {
        font-size: 0.7rem;
    }
    
    th a:hover {
        text-decoration: underline !important;
    }
    
    @@media (max-width: 768px) {
        .d-flex.gap-2 {
            gap: 0.5rem !important;
        }
        
        .btn-sm {
            font-size: 0.7rem;
            padding: 0.2rem 0.5rem;
        }
        
        .table th,
        .table td {
            padding: 0.5rem 0.25rem;
            font-size: 0.8rem;
        }
    }
</style>